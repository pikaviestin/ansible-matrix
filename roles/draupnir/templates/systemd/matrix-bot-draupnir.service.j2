# {{ ansible_managed }}

[Unit]
Description=Matrix moderation bot
PartOf=matrix.target

[Service]
User=draupnir
Environment=PATH=/usr/bin:/usr/local/bin
Environment=NODE_ENV=production
SyslogIdentifier=draupnir
WorkingDirectory={{ draupnir_data_path }}
ExecStart=/usr/bin/node {{ draupnir_data_path }}/src/lib/index.js --draupnir-config {{ draupnir_data_path }}/data/config.yaml
Restart=always
RestartSec=3

[Install]
WantedBy=matrix.target
